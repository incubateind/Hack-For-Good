<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edge_r">

    <TextView
        android:id="@+id/country_recovered_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Recovered"
        android:textAllCaps="true"
        android:textColor="@color/green_inactive"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_recovered_status"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/country_recovered_increased"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ar"
            android:gravity="bottom"
            android:textColor="@color/green_active"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/country_recovered_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/text_light"
            android:textSize="25sp" />

    </LinearLayout>


</RelativeLayout>